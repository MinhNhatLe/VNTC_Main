@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Thêm số điện thoại";
}

<style>
    .hero_area {
        min-height: 5vh;
    }
</style>

<section style="background-color: #eee;">
    <div class="container py-5">
        <h2 class="heading_container heading_center" style="margin-bottom: 40px;">@ViewData["Title"]</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="form-horizontal" role="form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label">Số điện thoại <b style="color: red">*</b></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Yêu cầu nhập số điện thoại ..." />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="text-center m-3">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-wrench" aria-hidden="true"></i> Gửi mã</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
