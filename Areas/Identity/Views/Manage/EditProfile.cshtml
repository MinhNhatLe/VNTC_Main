@model EditExtraProfileModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<partial name="_StatusMessage" />
<hr />

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="#">Hồ sơ</a></li>
                        <li class="breadcrumb-item"><a href="#">Hồ sơ cá nhân</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Cập nhật thông tin</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form id="profile-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="UserName">Tên tài khoản</label>
                                <input asp-for="UserName" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label asp-for="UserEmail">Địa chỉ email</label>
                                <input asp-for="UserEmail" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber">Số điện thoại</label>
                                <input asp-for="PhoneNumber" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label asp-for="Lastname">Họ <b style="color: red">*</b></label>
                                <input asp-for="Lastname" class="form-control" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Firstname">Tên <b style="color: red">*</b></label>
                                <input asp-for="Firstname" class="form-control" />
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HomeAdress">Địa chỉ <b style="color: red">*</b></label>
                                <textarea asp-for="HomeAdress" class="form-control"></textarea>
                                <span asp-validation-for="HomeAdress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BirthDate">Ngày sinh</label>
                                <input asp-for="BirthDate" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="text-center m-3">
                                <button id="update-profile-button" type="submit" class="btn btn-primary"><i class="fa fa-wrench" aria-hidden="true"></i> Cập nhật thông tin</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}