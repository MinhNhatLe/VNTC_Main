@model DisplayRecoveryCodesViewModel
@{
    ViewData["Title"] = "Mã phục hồi";
}

<style>
    .hero_area {
        min-height: 5vh;
    }
</style>

<section style="background-color: #eee;">
    <div class="container py-5">
        <h2 class="heading_container heading_center" style="margin-bottom: 40px;">@ViewData["Title"]</h2>
        <p class="text-success">@ViewData["StatusMessage"]</p>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5>Đây là các mã phục hồi của bạn</h5>
                        <p class="text-info">Lưu trữ các mã này đề phòng khi đăng nhập cần xác thực hai yếu tố</p>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>Codes:</dt>
                            @foreach (var code in Model.Codes)
                            {
                                <dd>
                                    <text>@code</text>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>