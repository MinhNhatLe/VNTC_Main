@model SetPasswordViewModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="#">Hồ sơ</a></li>
                        <li class="breadcrumb-item"><a href="#">Hồ sơ cá nhân</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Đặt mật khẩu</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Manage" asp-action="SetPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                            <p class="text-info">
                                Tài khoản của bạn chưa có mật khẩu, hãy thiết lập để có thể
                                đăng nhập mà không cần dùng tài khoản ngoài.
                            </p>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label">Mật khẩu mới <b style="color: red">*</b></label>
                                <input asp-for="NewPassword" class="form-control" placeholder="Yêu cầu nhập mật khẩu mới" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu <b style="color: red">*</b></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Yêu cầu nhập xác nhận mật khẩu" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="text-center m-3">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-wrench" aria-hidden="true"></i> Đặt mật khẩu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}