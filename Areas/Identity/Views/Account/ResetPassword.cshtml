@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Đặt lại mật khẩu</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal" role="form">
                            <h5>Đặt lại mật khẩu của bạn.</h5>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="@Model.Code" type="hidden" />
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email <b style="color: red">*</b></label>
                                <input asp-for="Email" class="form-control" placeholder="Yêu cầu nhập email ..." />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Nhập mật khẩu mới <b style="color: red">*</b></label>
                                <input asp-for="Password" class="form-control" placeholder="Yêu cầu nhập nhập mật khẩu mới ..." />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label">Lặp lại mật khẩu <b style="color: red">*</b></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Yêu cầu nhập lặp lại mật khẩu ..." />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="text-center m-3">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-wrench" aria-hidden="true"></i> Đặt lại mật khẩu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
