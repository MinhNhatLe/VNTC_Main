@model VerifyCodeViewModel
@{
    ViewData["Title"] = "Xác thực";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Mã xác thực</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="VerifyCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Provider" type="hidden" />
                            <input asp-for="RememberMe" type="hidden" />
                            <h4>@ViewData["Status"]</h4>
                            <div class="form-group">
                                <label asp-for="Code" class="control-label">Code <b style="color: red">*</b></label>
                                <input asp-for="Code" class="form-control" placeholder="Yêu cầu nhập Code ..." />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        <input asp-for="RememberBrowser" />
                                        <label asp-for="RememberBrowser"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center m-3">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i> Gửi</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
