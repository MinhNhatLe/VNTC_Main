@using dotnetstartermvc.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Xóa Database";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>
    <b>QUAN TRỌNG!</b>
    Chỉ có Lê Minh Nhật mới được phép sử dụng!
</h1>
<p class="alert alert-danger">
    Có chắc chắn xóa?
</p>

<form method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?');">
    <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash" aria-hidden="true"></i>
        Xóa Database
    </button>

    <hr>
    <a asp-action="Index" class="btn btn-outline-dark"> <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Quản lý Database</a>
</form>

@{
    _AdminSidebarService.SetActive("DbManage", "Index", "Database");
}

@section Sidebar
    {
    @Html.Raw(_AdminSidebarService.renderHtml())
}