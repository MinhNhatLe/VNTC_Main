@using Microsoft.AspNetCore.Identity
@using dotnetstartermvc.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <button class="btn btn-danger dropdown-toggle" type="button" id="managedropdownmenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            HỒ SƠ NGƯỜI DÙNG
        </button>
        <div class="dropdown-menu text-center" aria-labelledby="managedropdownmenu" style="width: 100%">
            <a class="dropdown-item text-primary" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage">
                Thông tin tài khoản
                @*<b class="text-primary">
                    @UserManager.GetUserName(User)
                </b>*@
            </a>
            <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                <button class="dropdown-item text-danger" type="submit">
                    <i class="fa fa-sign-out-alt"></i> Đăng xuất
                </button>
            </form>
        </div>
    </div>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li>
    </ul>
}