@using dotnetstartermvc.Menu
@inject AdminSidebarService _AdminSidebarService
@model dotnetstartermvc.ModelsRequest.NotificationRequest.CreateNotificationRequest

@{
    ViewData["Title"] = "Tạo tin tức";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tên tin tức <b style="color: red">*</b></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả thông tin dịch vụ <b style="color: red">*</b></label>
                <textarea asp-for="Description" class="form-control" id="summernoteEditor"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Người tạo</label>
                <input class="form-control" type="text" value="@ViewData["Username"]" readonly />
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Tạo tin tức
                </button>
            </div>
        </form>
        <hr />
        <a class="btn btn-outline-dark" asp-action="Index"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Danh sách tin tức</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{
    var summernote = new dotnetstartermvc.Models.Summernote("#summernoteEditor")
            {
                height = 300
            };
}
<partial name="_Summernote" model="summernote" />

@{
    _AdminSidebarService.SetActive("Notifications", "Create", "");
}

@section Sidebar
    {
    @Html.Raw(_AdminSidebarService.renderHtml())
}