@using dotnetstartermvc.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Quản lý số liệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <!-- Thêm biểu đồ tại đây -->
        <div style="width: 100%; margin: 0 auto;">
            <canvas id="myChart" width="800" height="400"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Người dùng', 'Dịch vụ', 'Tin tức', 'Tuyển dụng', 'Vai trò'],
                datasets: [{
                    label: 'Số lượng',
                    data: [
        @ViewBag.UsersCount,
        @ViewBag.ServicesCount,
        @ViewBag.NotificationsCount,
        @ViewBag.JobCount,
        @ViewBag.RolesCount
                                                    ],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}

@{
    _AdminSidebarService.SetActive("Chart", "Index", "");
}

@section Sidebar
    {
    @Html.Raw(_AdminSidebarService.renderHtml())
}